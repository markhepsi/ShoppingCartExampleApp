    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">Electronics <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><a href="/electronics">Tablet</a></li>
        <li><a href="/electronics">Laptop</a></li>
        <li><a href="/electronics">Smartphone</a></li>                        
      </ul>
    </li>
     <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">Dresses <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><a href="/dresses">Salwar</a></li>
        <li><a href="/dresses">Saree</a></li>
        <li><a href="/dresses">Shirt</a></li>                        
      </ul>
    </li>
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">Home <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><a href="/home">Sofas</a></li>
        <li><a href="/home">Kitchen</a></li>
        <li><a href="/home">Diningtable</a></li>                        
      </ul>
    </li>
    <li class="dropdown">
